<h1>Create a New User!</h1>

<% if @user.errors.any? %>
<h2> The following errors prevented the user from being created:</h2>
  <ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
<p>
  <%= f.label :username %><br/>
  <%= f.text_field :username %>
</p>
<p>
  <%= f.label :password %><br/>
  <%= f.text_field :password %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
