<h1 align="center">Welcome to <%= @user.username %>'s page:</h1>

  <div class="center">
    <%= gravatar_for @user, size: 110 %>
  </div>

<h4 align="center"> <%= @user.username %>'s articles </h4>
<nav class="pagination justify-content-center" >
  <%= will_paginate @user_articles %>
</nav>
<% if @user.articles.empty? %>
  <div align="center">
    <button class="btn btn-outline-primary btn-md"><%= link_to 'Create an Article!', new_article_path %></button>
  </div>
  <% else %>
    <%= render 'articles/article', obj: @user_articles %>
<% end %>
