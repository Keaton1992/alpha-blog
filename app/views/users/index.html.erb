<h1 align="center">All Alpha Bloggers:</h1>

<div align="center">
  <% @users.each do |user| %>
    <ul class="listing" align="center">
      <div class="center">
        <div class="well">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="articel-title">
            <%= link_to user.username, user_path(user) %></li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
        </div>
      </div>
    </ul>
  </div>



<% end %>
