<%= render 'shared/errors', obj: @article %>
<div class='row'>
  <div class='col-md-12'>
  <%= form_for @article do |f| %>
    <div class='form-group'>
      <label for='title'>Title</label>
      <%= f.text_field :title, class: "form-control", id: "exampleInputEmail1" %>
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Description</label>
      <%= f.text_area :description, class: "form-control", id: "exampleFormControlTextarea1", rows: 3 %>
    </div>
    <div>
      <label for='title'>Category:</label>
      <%= f.collection_select :category_ids, Category.all, :id, :name %>
    </div>
    <br>
      <%= f.submit class: 'btn btn-primary btn-lg' %>
  <% end %>
  <div class='center' padding-top='50px'>
    [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
  </div>
  </div>
</div>
