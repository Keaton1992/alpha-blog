
<% obj.each do |article| %>
  <div class="card-decks" align="center">
    <div class="card border-dark mb-3" style="width: 35rem;" align="center">
      <div class="card-body text-dark" align="center">
        <h5 class="card-header"><%= link_to article.title, article_path(article) %></h5>
        <%= render article.categories %>
        <p class="card-text text-truncate"><%= article.description %></p>
        <% if article.user %>
          <p>Created by: <%= link_to article.user.username, user_path(article.user) %></p>
        <% end %>
        <div>
          <% if logged_in? && (current_user == article.user || current_user.admin?) %>
            <%= link_to 'Edit', edit_article_path(article), class: "card-link btn btn-sm btn-primary" %>
            <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}, class: "card-link btn btn-sm btn-danger" %>
          <% end %>
        </div>
      </div>
    </div
  </div>
<% end %>
<% if logged_in? %>
  <div align="center">
    <button class="btn btn-outline-primary btn-md"><%= link_to 'New Article', new_article_path %></button>
  </div>
<% end %>
