
<nav class="navbar navbar-expand-lg navbar-light" align="center">
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <form class="form-group my-2 my-lg-0 ml-auto mr-auto">
      <%= form_with(url: articles_path, method: "get", class: "form-control") do %>
        <%= label_tag(:q, "Search Articles", class: "lead") %>
        <%= search_field_tag(:q) %>
        <%= submit_tag("Search", class: "btn btn-primary") %>
      <% end %>
  </div>
</nav>

<% obj.each do |article| %>
  <div class="card-decks" align="center">
    <div class="card border-dark mb-3" style="width: 35rem;" align="center">
      <div class="card-body text-dark" align="center">
        <h5 class="card-header"><%= link_to article.title, article_path(article) %></h5>
        <p class="card-text"><%= article.description %></p>
        <% if logged_in? && current_user == article.user %>
          <%= link_to 'Edit', edit_article_path(article), class: "card-link" %>
          <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}, class: "card-link" %>
        <% end %>
      </div>
    </div
  </div>
<% end %>
<% if logged_in? %>
  <div align="center">
    <button class="btn btn-outline-primary btn-md"><%= link_to 'New Article', new_article_path %></button>
  </div>
<% end %>
