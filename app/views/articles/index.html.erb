<h1>List of all Articles</h1>
<button class="btn btn-outline-primary btn-md"><%= link_to 'New Article', new_article_path %></button>

<table class="table table-hover">
  <tr>
    <th scope="col">Title</th>
    <th scope="col">Description</th>
    <th scope="col">Edit</th>
    <th scope="col">DELETE</th>
  </tr>
    <% @index.each do |article| %>
      <tr>
        <td><%= link_to article.title, article %></td>
        <td style="overflow: hidden; text-overflow: ellipsis;"><%= article.description %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td> | </td>
        <td style="text-align:center"> <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </table>
