<h1>List of all Articles</h1>
<button style="font-size:106%"><%= link_to 'New Article', new_article_path %></button><br><br>
<hr>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
    <% @index.each do |article| %>
      <tr>
        <td><%= link_to article.title, article %></td>
        <td><%= article.description %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
      </tr>
    <% end %>
  </table>
